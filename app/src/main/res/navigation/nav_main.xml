<?xml version="1.0" encoding="utf-8"?>
<navigation  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/nav_dest_home_welcome_fragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main">

    <fragment
        android:id="@+id/nav_dest_home_welcome_fragment"
        android:name="com.example.msapps.ui.CategoryFragment"
        tools:layout="@layout/fragment_category">

        <action
            android:id="@+id/nav_action_category_fragment"
            app:destination="@+id/nav_dest_article_fragment" />
        <action
            android:id="@+id/action_nav_dest_home_welcome_fragment_to_nav_dest_favorites_fragment"
            app:destination="@id/nav_dest_favorites_fragment" />


    </fragment>

    <fragment
        android:id="@+id/nav_dest_article_fragment"
        android:name="com.example.msapps.ui.ArticleFragment"
        tools:layout="@layout/fragment_articles">

        <argument
            android:name="category"
            app:nullable="true"
            android:defaultValue="@null"
            app:argType="string"
            />

    </fragment>

    <fragment
        android:id="@+id/nav_dest_favorites_fragment"
        android:name="com.example.msapps.ui.FavoriteFragment"
        tools:layout="@layout/fragment_favorites">

    </fragment>

</navigation>